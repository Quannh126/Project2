<%- include ('../playouts/headlink')-%>
<link rel="stylesheet" type="text/css" href="../css/homestyle.css" />
<link rel="stylesheet" type="text/css" href="../css/grid.css" />
<%- include ('../playouts/navbar.ejs')-%>
    <section id="product">
        <div class="container">   
            <div class="row">
                <h6 class=" mt-4 mb-2 d-flex justify-content-start">
                    <a href="/">Trang chủ</a>
                    >
                    <a href="/<%= cates[data.cate].namekodau%>.<%= data.cate%>"><%= cates[data.cate].name%></a>
                    >
                    <p>Chi tiết sản phẩm: <%= data.name%></p>
                </h6> 
            </div>
                
        <div class="row">     
            <div class="col-md-6"> 
                <div>
                    <img class="imgdetail" src="../<%= data.img%>" alt="" title="" style="height: 400px;">
                </div>
                          
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-between">
                <h3 class="detailname mb-1"><%= data.name%></h3>
   
                <h4 class="pricetag pricenew detailpriceb pb"><%= data.price%></h4>

               
                <a class="btn btn-danger btn-lg " href="/addtocart/<%= data.id%>" style=" width:250px;">
                    <i class="fas fa-cart-plus"></i>
                    <span>Thêm vào giỏ hàng</span>
                </a>
            </div>
        </div>
        <div class="productdesc mt-5 ">                 
            <h5>Chi Tiết Sản Phẩm</h5>
            <div class="deatildesc"><%= data.des%></div>           
        </div> 
    </section>
    
    <!--Sản phẩm cùng loại-->
    
    <div class="container">
        <div class="row headingcate mt-5 mb-3">
            <h3>Các sản phẩm cùng loại</h3>
        </div>
        <%if(!products==''){%>
        <div class="d-flex justify-content-around row productcontainer">
            <% products.forEach(function(product){%>
            <ul class="col-md-3 col-sm-6 d-flex  justify-content-center">
                <li class="itemcontainer">
                    <h6 class="mt-3 mb-3 "><%= product.name%></h6>
                    <div class="thumbnail m-2"><a class="linkdetail" href="/detail/<%= product.namekodau%>.<%= product.id%>.<%= product.cate%>"><img alt="" src="../<%= product.img%>"/></a>
                        <div class="descristion mt-1 ml-2">
                            <p> <%= product.des%></p>
                        </div>
                        <div class="pricetag m-2 d-flex justify-content-between">
                            <p class="pricenew align-self-center"><%= product.price%></p>
                            <a class="btn btn-danger" href="/addtocart/<%= product.id%>"><i class="fas fa-cart-plus"></i></a>
                        </div>
                    </div>
                </li>
            </ul>
            <%})};%>
            
        </div>
    </div>

    <script src="../js/home.js"></script>
<%- include ('../playouts/footer.ejs')-%>