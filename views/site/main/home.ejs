<%- include ('../playouts/headlink.ejs')-%>


<!-- slide+navbar -->
<%- include ('../playouts/navbar.ejs')-%>

<div class="carousel slide mr-5 ml-5" id="slide" data-ride="carousel">
    <!-- Indicators-->
    <ul class="carousel-indicators">
        <li class="active" data-target="#slide" data-slide-to="0"></li>
        <li data-target="#slide" data-slide-to="1"></li>
        <li data-target="#slide" data-slide-to="2"></li>
    </ul>
    <!-- The slideshow-->
    <div class="carousel-inner">
        <div class="carousel-item active"><img src="/image/carousel3.jpg" width="1320" height="580" /></div>
        <div class="carousel-item"><img src="/image/carousel1.jpg" width="1320" height="580" /></div>
        <div class="carousel-item"><img src="/image/carousel2.jpg" width="1320" height="580" /></div>
    </div>
    <!-- Left and right controls-->
    <a class="carousel-control-prev" href="#slide" data-slide="prev"><span class="carousel-control-prev-icon"></span></a>
    <a class="carousel-control-next" href="#slide" data-slide="next"><span class="carousel-control-next-icon"></span></a>
</div>
<!-- products-->
<% var catekeys = Object.keys(cates); %>
<% var productkeys = Object.keys(products); %>
<% catekeys.forEach(function(cate){var id = 0;%>
<div class="row mt-40" id="featured"></div>
<div class="container">
    <h1 class="heading1">
        <span class="maintext"><%= cates[cate].name %></span>
    </h1>
    <div class="d-flex justify-content-around row">
        <% productkeys.forEach(function(product){if(id < 5) { if(products[product].cate == cates[cate].id){ id ++ ;  %>
        <div class="col-md-3 col-sm-6">
            <ul class="thumbnails">
                <li class="itemcontainer">
                    <h6><%= products[product].name%></h6>
                    <div class="thumbnail"><a class="linkdetail" href="#"><img alt="" src="<%= products[product].img%>"/></a>
                        <div class="descristion">
                            <p> <%= products[product].des%></p>
                        </div>
                        <div class="pricetag">
                            <div class="price"></div>
                            <p class="pricenew"><%= products[product].price%></p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <%}}});%>
    </div>
</div>
<%});%>
<script src="./js/home.js"></script>
